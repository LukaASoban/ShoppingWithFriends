<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yesmen.cs2340.shoppingwithfriends.AddFriendPage">


    <EditText
        android:id="@+id/add_friend_username_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="78dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/add_friend_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Friend&apos;s Username:"
        android:layout_alignBottom="@+id/add_friend_username_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:id="@+id/add_friend_execute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/add_friend_username_input"
        android:layout_alignLeft="@+id/add_friend_username_input"
        android:layout_alignStart="@+id/add_friend_username_input" />

    <Button
        android:id="@+id/add_friend_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBottom="@+id/add_friend_execute_button"
        android:layout_alignRight="@+id/add_friend_username_input"
        android:layout_alignEnd="@+id/add_friend_username_input" />

</RelativeLayout>
