<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#2ABC9D"
    tools:context="yesmen.cs2340.shoppingwithfriends.AddFriendPage"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:padding="16dp">

        <!--USERNAME INPUT-->
        <EditText
            android:id="@+id/add_friend_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:drawableRight="@drawable/search_tran"
            android:hint="@string/enter_friend_username"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            tools:ignore="RtlHardcoded" />
<!--SUBMIT-->
        <Button
            android:id="@+id/add_friend_execute_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="@string/submit"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@id/add_friend_username_input"/>
<!--CANCEL-->
        <Button
            android:id="@+id/add_friend_cancel_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/add_friend_execute_button" />

    </RelativeLayout>
</RelativeLayout>
