<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ABC9D">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:layout_marginRight="64dp"
        android:padding="16dp">

        <!--ENTER ITEM-->
        <EditText
            android:id="@+id/my_item_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/user"
            android:hint="Enter Item"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />
        <!--THRESHOLD PRICE-->
        <EditText
            android:id="@+id/my_price_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/user"
            android:hint="Threshold Price"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:layout_below="@id/my_item_input"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--SUBMIT-->
        <Button
            android:id="@+id/wishlist_submit_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@id/my_price_input"/>
        <!--CANCEL-->
        <Button
            android:id="@+id/wishlist_cancel_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/wishlist_submit_button" />

    </RelativeLayout>


