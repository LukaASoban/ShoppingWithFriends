<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shopping_logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/register_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_alignBottom="@+id/register_logo"
        android:layout_alignLeft="@+id/register_password_input"
        android:layout_alignStart="@+id/register_password_input" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/register_logo"
        android:layout_alignLeft="@+id/register_username_text"
        android:layout_alignStart="@+id/register_username_text" />

    <TextView
        android:id="@+id/register_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/register_username_input"
        android:layout_alignRight="@+id/register_username_text"
        android:layout_alignEnd="@+id/register_username_text" />


    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/register_password_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/register_execute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/register_confirm_password_input"
        android:layout_alignRight="@+id/register_username_input"
        android:layout_alignEnd="@+id/register_username_input" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/register_cancel_button"
        android:layout_below="@+id/register_confirm_password_input"
        android:layout_alignLeft="@+id/register_password_text"
        android:layout_alignStart="@+id/register_password_text" />

    <EditText
        android:id="@+id/register_confirm_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/register_confirm_password_text"
        android:layout_alignLeft="@+id/register_cancel_button"
        android:layout_alignStart="@+id/register_cancel_button" />

    <TextView
        android:id="@+id/register_confirm_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed Password"
        android:layout_below="@+id/register_password_input"
        android:layout_alignLeft="@+id/register_password_input"
        android:layout_alignStart="@+id/register_password_input" />

</RelativeLayout>