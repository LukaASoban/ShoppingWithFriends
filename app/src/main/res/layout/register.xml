<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ABC9D"
   >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:padding="16dp">

        <!--MAIN LOGO-->
        <ImageView
            android:contentDescription="The Main Logo for our project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_full"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            />

        <!--USERNAME INPUT-->
        <EditText
            android:id="@+id/register_username_input"
            android:layout_below="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/user"
            android:hint="@string/username"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="#FFFFFF"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--PASSWORD INPUT-->
        <EditText
            android:id="@+id/register_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/lock"
            android:hint="@string/password"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@id/register_username_input"
            android:textColorHint="#FFFFFF"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="4dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--CONFIRM PASSWORD INPUT-->
        <EditText
            android:id="@+id/register_confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/lock"
            android:hint="@string/confirm_password"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@id/register_password_input"
            android:textColorHint="#FFFFFF"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="4dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--REGISTER BUTTON-->
        <Button
            android:id="@+id/register_execute_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:text="@string/email"
            android:background="@drawable/shape"
            android:textColor="#FFFFFF"
            android:layout_below="@id/register_confirm_password_input"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"/>
        <!--CANCEL BUTTON-->
        <Button
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:text="@string/cancel"
            android:id="@+id/register_cancel_button"
            android:background="@drawable/shape"
            android:textColor="#FFFFFF"
            android:layout_below="@id/register_execute_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
</RelativeLayout>