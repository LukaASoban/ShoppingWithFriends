<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ABC9D"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:padding="16dp">

        <!--MAIN LOGO-->
        <ImageView
            android:contentDescription="Our Main Project Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_full"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"
            />

        <!--USERNAME INPUT-->
        <EditText
            android:id="@+id/login_username_input"
            android:layout_below="@id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/user"
            android:hint="@string/username"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            tools:ignore="RtlHardcoded" />

        <!--PASSWORD INPUT-->
        <EditText
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/lock"
            android:hint="@string/password"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@id/login_username_input"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="4dp"
            tools:ignore="RtlHardcoded" />

        <!--LOGIN BUTTON-->
        <Button
            android:id="@+id/login_execute_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:text="@string/log_in"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape"
            android:layout_below="@+id/login_password_input"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"/>

        <!--REGISTER BUTTON-->
        <Button
            android:id="@+id/login_register_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape"
            android:layout_below="@+id/login_execute_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"/>

    </RelativeLayout>

</RelativeLayout>