<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yesmen.cs2340.shoppingwithfriends.ReportedSales"
    android:background="#2ABC9D">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:layout_marginRight="64dp"
        android:padding="16dp">

        <!--ITEM-->
        <EditText
            android:id="@+id/reported_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:drawableRight="@drawable/item"
            android:hint="@string/enter_item"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />



        <!--PRICE-->
        <EditText
            android:id="@+id/reported_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:inputType="numberDecimal"
            android:drawableRight="@drawable/money"
            android:hint="@string/enter_price"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/reported_item_name"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--LOCATION-->
        <EditText
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:drawableRight="@drawable/location"
            android:hint="@string/city_state_zip"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/reported_item_price"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <!--QUANTITY-->
        <EditText
            android:id="@+id/reported_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:drawableRight="@drawable/quantity"
            android:hint="@string/quantity"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/rounded_edittext"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:paddingLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/location_input"
            android:textCursorDrawable="@drawable/color_cursor"
            />


        <!--SUBMIT-->
        <Button
            android:id="@+id/reported_submit_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="@string/submit"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/reported_item_quantity"/>

        <!--CANCEL-->
        <Button
            android:id="@+id/reported_cancel_button"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/shape"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/reported_submit_button" />

    </RelativeLayout>

</RelativeLayout>
